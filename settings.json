{
  "editor.fontSize": 13,
  "security.workspace.trust.untrustedFiles": "open",
  "diffEditor.wordWrap": "on",
  "editor.wordWrap": "on",
  "workbench.startupEditor": "none",
  "editor.minimap.enabled": false,
  "editor.formatOnSave": true,
  "editor.fontFamily": "Hack, 'DM Mono', Menlo, Monaco, 'Courier New', monospace",
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[php]": {
    "editor.defaultFormatter": "bmewburn.vscode-intelephense-client"
  },
  "workbench.tree.renderIndentGuides": "always",
  "workbench.tree.indent": 20,
  "workbench.colorCustomizations": {
    "tree.indentGuidesStroke": "#008070",
    "editorIndentGuide.activeBackground": "#ffbe30",
    "editorIndentGuide.background": "#008070",
    
    "editorCursor.foreground": "#ffbe30",
    "terminalCursor.foreground": "#ffbe30"
  },
  "editor.cursorWidth": 8,
  "workbench.view.alwaysShowHeaderActions": true,
  "workbench.editor.limit.value": 15,
  "workbench.editor.pinnedTabSizing": "compact",
  "window.zoomLevel": 0.25,
  "workbench.colorTheme": "Panda Syntax",
  "workbench.iconTheme": "material-icon-theme",
  "material-icon-theme.folders.color": "#ffbe30",
  "editor.cursorSmoothCaretAnimation": true,
  "terminal.integrated.fontFamily": "MesloLGS NF",
  "diffEditor.ignoreTrimWhitespace": false
}
